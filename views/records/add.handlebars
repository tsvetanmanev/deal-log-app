<div>
  <form action="/records/add" method="POST" class="form-horizontal">

    <div class="col-sm-6">
      <div class="form-group">
        <label for="opportunityId" class="col-sm-4 control-label">OPE ID</label>
        <div class="col-sm-8">
          <input class="form-control" type="text" name="opportunityId" id="opportunityId">
        </div>
      </div>
      <div class="form-group">
        <label for="approvalId" class="col-sm-4 control-label">APE ID</label>
        <div class="col-sm-8">
          <input class="form-control" type="text" name="approvalId" id="approvalId">
        </div>
      </div>
      <div class="form-group">
        <label for="country" class="col-sm-4 control-label">Country</label>
        <div class="col-sm-8">
          <select name="country" id="country">
            {{#each subregions}}
              {{#each this}}
                <option value="{{this}}">{{this}}</option>
              {{/each}}
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="soarType" class="col-sm-4 control-label">SOAR type</label>
        <div class="col-sm-8">
          <select name="soarType" id="soarType">
          <option value="OA">OA</option>
          <option value="BA">BA</option>
          <option value="TC">Ts&Cs</option>
          <option value="OA">Scope Change</option>
        </select>
        </div>
      </div>
      <div class="form-group">
        <label for="totalValue" class="col-sm-4 control-label">TCV</label>
        <div class="col-sm-6">
          <div class="input-group">
            <span class="input-group-addon">$</span>
            <input class="form-control" type="number" name="totalValue" id="totalValue">
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="margin" class="col-sm-4 control-label">Margin</label>
        <div class="col-sm-6">
          <div class="input-group">
            <input class="form-control" type="number" name="margin" id="margin" max="100">
            <span class="input-group-addon">%</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <label for="projectName" class="col-sm-4 control-label">Project name</label>
        <div class="col-sm-8">
          <input class="form-control" type="text" name="projectName" id="projectName">
        </div>
      </div>
      <div class="form-group">
        <label for="comments" class="col-sm-4 control-label">Comments</label>
        <div class="col-sm-8">
          <textarea class="form-control" rows="4" name="comments" id="comments">
          </textarea>
        </div>
      </div>
      <div class="form-group">
        <label for="isOffline" class="col-sm-4 control-label">Offline approval</label>
        <div class="col-sm-8">
          <div class="checkbox">
            <label>
              <input type="checkbox" name="isOffline" id="isOffline">
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="isCancelled" class="col-sm-4 control-label">Canceled</label>
        <div class="col-sm-8">
          <div class="checkbox">
            <label>
              <input type="checkbox" name="isCancelled" id="isCancelled">
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="isOAskipped" class="col-sm-4 control-label">OA SOAR skipped</label>
        <div class="col-sm-8">
          <div class="checkbox">
            <label>
              <input type="checkbox" name="isOAskipped" id="isOAskipped">
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="isMultiRegionalOrMultiCluster" class="col-sm-4 control-label">Multi-regional</br>Multi-cluster</label>
        <div class="col-sm-8">
          <div class="checkbox">
            <label>
              <input type="checkbox" name="isMultiRegionalOrMultiCluster" id="isMultiRegionalOrMultiCluster">
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="rescheduled" class="col-sm-4 control-label">Rescheduled</label>
        <div class="col-sm-8">
          <select name="rescheduled" id="rescheduled">
            <option value="No">No</option>
            <option value="1">1 days</option>
            <option value="2">2 days</option>
            <option value="3">3 days</option>
            <option value="4">4 days</option>
            <option value=">4">>4 days</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="soarQuality" class="col-sm-4 control-label">SOAR Quality</label>
        <div class="col-sm-8">
          <select name="soarQuality" id="soarQuality">
            <option value="G">G</option>
            <option value="I">I</option>
            <option value="B">B</option>
            <option value="N/A">N/A</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="reqQuality" class="col-sm-4 control-label">Request quality</label>
        <div class="col-sm-8">
          <select name="reqQuality" id="reqQuality">
            <option value="G">G</option>
            <option value="I">I</option>
            <option value="B">B</option>
            <option value="N/A">N/A</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="docQuality" class="col-sm-4 control-label">Documents quality</label>
        <div class="col-sm-8">
          <select name="docQuality" id="docQuality">
            <option value="G">G</option>
            <option value="I">I</option>
            <option value="B">B</option>
            <option value="N/A">N/A</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="numOfSOARs" class="col-sm-4 control-label">Number of SOARs</label>
        <div class="col-sm-6">
          <input class="form-control" type="number" name="numOfSOARs" id="numOfSOARs" min="1" max="10" value="1">
        </div>
      </div>


    </div>
    <div class="col-sm-12">
      <div class="form-group">
        <button type="submit" class="btn btn-default">Add</button>
      </div>
    </div>

  </form>
</div>